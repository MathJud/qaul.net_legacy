config defaults
	option syn_flood	1
	option input		ACCEPT
	option output		ACCEPT
	option forward		REJECT
# Uncomment this line to disable ipv6 rules
#	option disable_ipv6	1

config zone
	option name      lan
	option network  'lan'
	option input    ACCEPT
	option output   ACCEPT
	option forward  REJECT

config zone
	option name    'qaul'
	option network 'qaulwifi qauleth qaulvpn'
	option input   'ACCEPT'
	option output  'ACCEPT'
	option forward 'ACCEPT'
#	option masq     1                                                                                     
#	option masq_src 192.168.10.0/24                                                                       
                                        
config zone
	option name     wan
	option network	'wan wan3g'
	option input    REJECT
	option output   ACCEPT
	option forward  REJECT
	option masq     1
	option mtu_fix  1

config forwarding                               
	option src      lan             
	option dest     qaul

# allow tinc VPN connection to device via wan       
config rule                              
	option name             Allow-VPN
	option src              wan
	option dest_port        655
	option target           ACCEPT
	option family           ipv4
                 
# allow ssh connection to device via wan   
config rule                                
	option name             Allow-SSH       
	option src              wan             
	option proto            tcp                
	option dest_port        22                        
	option target           ACCEPT                                
	option family           ipv4                                        
                                                
# allow http connection to device via wan       
config rule                              
	option name             Allow-HTTP      
	option src              wan        
	option proto            tcp                
	option dest_port        80                        
	option target           ACCEPT                                
	option family           ipv4                                        
                                            
# We need to accept udp packets on port 68,
# see https://dev.openwrt.org/ticket/4108
config rule
	option name		Allow-DHCP-Renew
	option src		wan
	option proto		udp
	option dest_port	68
	option target		ACCEPT
	option family		ipv4

# Allow IPv4 ping
config rule
	option name		Allow-Ping
	option src		wan
	option proto		icmp
	option icmp_type	echo-request
	option family		ipv4
	option target		ACCEPT

# include a file with users custom iptables rules
config include
	option path /etc/firewall.user
